<%= render "layouts/errors", :object => @post %>

<%= bootstrap_form_for @post, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, :rows => 12, :cols => 75  %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit Your Post" %>
  </div>
<% end %>
